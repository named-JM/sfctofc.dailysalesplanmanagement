@using SFCTOFC.DailySalesPlanManagement.Application.Features.References.REFBrand.DTOs

<style>

    .custom-dialog {
        width: 600px;
        max-width: 600px;
        height: 70vh;
        max-height: 70vh;
    }

        .custom-dialog .mud-dialog-content {
            overflow-y: auto;
            padding: 1.5rem;
        }

    .section-title {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .description {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 0.5rem;
    }

    /* Remove MudPaper default shadow */
    .minimal-panel {
        box-shadow: none !important;
        border-radius: 8px;
        padding: 1rem;
        position: relative;
        border: none;
    }

        .minimal-panel::before {
            content: "";
            position: absolute;
            inset: 0;
            border-radius: 5px;
            padding: 1px; /* thin fade edge */
            background: linear-gradient(145deg, rgba(0,0,0,0.1), rgba(0,0,0,0.1));
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
        }

    .mud-dialog-actions {
        gap: 0.5rem; /* space between Decline & Approve */
    }

</style>

<MudDialog Class="custom-dialog">
    <DialogContent>
        <MudStack Row="true" Spacing="2">
            <MudText Typo="Typo.h6" Align="Align.Left">@Brand.BrandName</MudText>
        </MudStack>

        <MudDivider Class="my-2" />

        <MudPaper Class="minimal-panel">
            <MudText Class="section-title">@Brand.BrandName</MudText>
            @* <MudText Class="description">@JobRequest.RequestDetails</MudText> *@

            <MudDivider Class="my-3" />

            <MudText><b>Brand Code:</b> @Brand.BrandCode</MudText>
            @* <MudText><b>Priority:</b> @JobRequest.Priority</MudText> *@
        </MudPaper>


    </DialogContent>

    




</MudDialog>




@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public BrandDto Brand { get; set; } = new();

    void Close() => MudDialog.Close();

 
}
